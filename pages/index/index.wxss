/**index.wxss**/
.banner {
    height: 300px;
    width: 100%;
}
.banner image{
    position: absolute;
    width: 100%;
    height: 300px;
}
.banner .cont {
    position: absolute;
    z-index: 1;
}
.banner .amount {
    top: 50px;
    left: 20px;
    font-size: 18px;
    line-height: 50px;
    color: #ff7f21;
    position: absolute;
}
.amount view {
    display:inline;
}
.banner .text {
    position: relative;
    width: 80px;
    display: inline-block;
}
.banner .text::before {
    position: absolute;
    right: -5px;
    content: '\FF1A';
}
.w1000 {
    max-width: 1000px!important;
    margin: 0 auto;
}
.content {
    padding: 60px 0 60px 0;
}
.content .cont .title {
    padding-left: 10px;
    margin-bottom: 60px;
}
.content .cont .title a.active, .content .cont .title a:hover {
    color: #ff7f21!important;
}
.content .cont .title a {
    font-size: 16px;
    color: #000!important;
}
.content .cont .title .layui-breadcrumb span {
    position: relative;
    top: -1px;
    margin: 0 16px;
    color: #999;
}
.content .cont .list-item .item {
    margin-bottom: 50px;
    overflow: hidden;
}
.content .cont .list-item .layui-fluid {
    padding: 0;
    position: relative;
    margin: 0 auto;
}
.layui-row:after, .layui-row:before {
    content: '';
    display: block;
    clear: both;
}
.img-item {
    width:100%;
}
.img {
    padding: 0 10px;
}
.img image {
    width: 100%;
    border: none;
    vertical-align: middle;
    display: inline-block;
}
.content .cont .list-item .item .item-cont {
    padding: 0 20px;
}
.content .cont .list-item .item .item-cont .h3 {
    margin: 15px 0;
    font-size: 22px;
}
.content .cont .list-item .item .item-cont .h5 {
    margin-bottom: 10px;
    font-size: 12px;
    color: #ff7f21;
}
.content .cont .list-item .item .item-cont p {
    line-height: 30px;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    -webkit-box-orient: vertical;
}
