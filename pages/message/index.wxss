.leacots-content {
    padding: 0 20px 40px 20px;
}
.leacots-content .item-box {
    background: transparent;
}
.whisper-content .item-box {
    background: #f9f9f9;
    margin-bottom: 20px;
}
.leacots-content .review-version {
    padding: 0;
    border-top: 0;
}
.leacots-content .review-version .form {
    margin: 40px 0;
}
.leacots-content .review-version .banner-img {
    float: none;
    width: 100%;
    height:60px;
    display: inline-block;
}
.leacots-content .review-version .form .layui-form-item {
    clear: both;
    margin-bottom: 15px;
}
.leacots-content .review-version .form .layui-input-block {
    margin-left: 0;
}
.layui-form-item:after {
    content: '\20';
    clear: both;
    display: block;
    height: 0;
}
.layui-textarea {
    min-height: 100px;
    height: auto;
    line-height: 20px;
    resize: vertical;
}
.form textarea {
    border:1px solid #402760;
    display: block;
    width: 100%;
    background-color: #fff;
    border-radius: 2px;
}
.layui-btn {
    display: inline-block;
    height: 38px;
    line-height: 38px;
    padding: 0 18px;
    background-color: #009688;
    color: #fff;
    white-space: nowrap;
    text-align: center;
    font-size: 14px;
    border: none;
    border-radius: 2px;
    cursor: pointer;
}
.layui-input-block {
    min-height: 36px;
    margin-left: 0;
}
.text-right {
    text-align:right;
}
.layui-input-block .layui-btn {
    width: 100px;
    height: 40px;
    line-height: 40px;
    background: #ff7f21;
}

.leacots-content .review-version .volume {
    color: #3f2469;
}
.leacots-content .review-version .volume span {
    padding-left: 30px;
    color: #f37d25;
}
.leacots-content .review-version .list-cont .cont {
    max-width: 100%;
}
.list-cont .cont {
    padding: 40px 0 30px 0;
    border-bottom: 1px solid #e5e5e5;
}
.cont .img image {
    width: 50px;
    height: 50px;
    float: left;
}
.list-cont .cont .text {
    padding-left: 0;
    line-height: 22px;
    color: #333;
}
.cont .text .tit {
    display: inline;
    line-height: 50px;
    margin-bottom: 0;
}
.cont .text .tit .name {
    display: inline;
    margin-left: 20px;
    line-height: 50px;
}
.cont .text .data {
    float: right;
}
.cont .text .ct {
    margin-top: 20px;
}